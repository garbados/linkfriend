{
  "name": "p2p-social-bookmarking",
  "version": "1.0.0-alpha",
  "description": "Peer-to-peer social bookmarking. Archive, search, and share your slice of the web.",
  "main": "./src/js/index.js",
  "scripts": {
    "pretest": "standard",
    "test": "mocha --recursive --require @babel/register",
    "posttest": "npm audit",
    "prebuild": "mkdir -p build",
    "build": "run-p build:*",
    "build:css": "node-sass --omit-source-map-url src/scss/main.scss build/main.css",
    "build:fonts": "cp node_modules/@fortawesome/fontawesome-free/js/all.min.js build/fontawesome.min.js",
    "build:js": "browserify src/js/index.js -o build/app.js -t [ babelify ]",
    "build:html": "cp src/html/* build",
    "serve": "serve build",
    "start": "run-s build serve",
    "predev": "npm run build",
    "dev": "run-p dev:* serve",
    "dev:css": "npm run build:css -- --watch",
    "dev:js": "sane 'npm run build:js' src/js",
    "dev:html": "sane 'npm run build:html' src/html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbados/p2p-social-bookmarking.git"
  },
  "keywords": [
    "p2p",
    "bookmarks",
    "browser"
  ],
  "author": "D Dino [https://toot.cat/@garbados]",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/garbados/p2p-social-bookmarking/issues"
  },
  "homepage": "https://github.com/garbados/p2p-social-bookmarking#readme",
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fortawesome/fontawesome-free": "^5.3.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.2",
    "bulma": "^0.7.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "sane": "^3.0.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "serve": "^10.0.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "downshift": "^2.2.2",
    "history": "^4.7.2",
    "lodash.isequal": "^4.5.0",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "preact": "^8.3.1",
    "preact-markdown": "^0.4.0",
    "preact-router": "^2.6.1",
    "uuid": "^3.3.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ],
      [
        "@babel/plugin-transform-runtime"
      ]
    ]
  },
  "standard": {
    "env": {
      "mocha": true
    },
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
